name=imx-lib
version=20130214
release=1
source=(http://crux-arm.nu/files/distfiles/efikamx/$name-$version.tar.xz)

build() {
  cd $name
  make -j1 PLATFORM=IMX51 INCLUDE="-I/usr/src/linux-`uname -r`/include"
  make DESTDIR=$PKG PLATFORM=IMX51 install
}
